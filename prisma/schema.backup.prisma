generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========== USER & AUTHENTICATION ==========
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(CUSTOMER)
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  affiliateLinks AffiliateLink[]
  commissions   Commission[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email, role])
}

enum UserRole {
  CUSTOMER
  AFFILIATE
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ========== PRODUCT CATALOG ==========
model Product {
  id          String    @id @default(cuid())
  sku         String    @unique
  name        String
  slug        String    @unique
  description String    @db.Text
  shortDescription String?
  
  // Product Type
  productType ProductType @default(OWN_PRODUCT)
  
  // Pricing
  basePrice   Float
  salePrice   Float?
  isOnSale    Boolean  @default(false)
  currency    String   @default("USD")
  
  // Product Info
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  // Media
  imageUrl    String
  gallery     String[] // Array of image URLs
  
  // Links (conditional based on product type)
  downloadUrl     String? // For own products
  affiliateUrl    String? // For affiliate products
  tutorialUrl     String?
  reviewVideoUrl  String?
  
  // Features
  features   Json? // Array of features stored as JSON
  tags       String[]
  
  // Stats
  views      Int     @default(0)
  clicks     Int     @default(0)
  sales      Int     @default(0)
  rating     Float?  @default(0)
  reviewCount Int    @default(0)
  
  // Status
  isActive   Boolean @default(true)
  isFeatured Boolean @default(false)
  isDigital  Boolean @default(true)
  
  // Relations
  variants   ProductVariant[]
  promoCodes PromoCode[]
  orders     OrderItem[]
  affiliateLinks AffiliateLink[]
  analytics  ProductAnalytics[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([slug, categoryId, productType, isActive, isFeatured])
}

enum ProductType {
  OWN_PRODUCT
  AFFILIATE_PRODUCT
}

model ProductVariant {
  id        String   @id @default(cuid())
  productId String
  name      String
  sku       String   @unique
  price     Float
  stock     Int      @default(-1) // -1 = unlimited (digital products)
  
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@index([productId, sku])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  icon        String?
  color       String?   @default("#3B82F6")
  
  // Hierarchy
  parentId    String?
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  
  // Products
  products    Product[]
  
  // Status
  isActive    Boolean   @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([slug, parentId])
}

// ========== AFFILIATE SYSTEM ==========
model AffiliateLink {
  id          String   @id @default(cuid())
  productId   String
  userId      String
  customCode  String?  @unique
  
  // Tracking
  clicks      Int      @default(0)
  conversions Int      @default(0)
  earnings    Float    @default(0)
  
  // Commission
  commissionRate Float @default(0.3) // 30% default commission
  customRate     Float?
  
  // Status
  isActive    Boolean  @default(true)
  
  // Relations
  product     Product  @relation(fields: [productId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
  clickEvents ClickEvent[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([productId, userId])
  @@index([userId, productId, isActive])
}

model ClickEvent {
  id             String   @id @default(cuid())
  affiliateLinkId String
  ipAddress      String?
  userAgent      String?
  referrer       String?
  country        String?
  city           String?
  
  // UTM Parameters
  utmSource      String?
  utmMedium      String?
  utmCampaign    String?
  utmTerm        String?
  utmContent     String?
  
  affiliateLink AffiliateLink @relation(fields: [affiliateLinkId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@index([affiliateLinkId, createdAt])
}

model Commission {
  id              String   @id @default(cuid())
  affiliateLinkId String
  orderId         String
  userId          String
  
  // Commission Details
  amount          Float
  rate            Float
  status          CommissionStatus @default(PENDING)
  
  // Relations
  affiliateLink   AffiliateLink @relation(fields: [affiliateLinkId], references: [id])
  order           Order         @relation(fields: [orderId], references: [id])
  user            User          @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId, status, createdAt])
}

enum CommissionStatus {
  PENDING
  APPROVED
  PAID
  CANCELLED
}

// ========== ORDER & TRANSACTIONS ==========
model Order {
  id          String   @id @default(cuid())
  orderNumber String   @unique
  userId      String?
  
  // Customer Info
  customerEmail String
  customerName  String?
  
  // Order Details
  items       OrderItem[]
  totalAmount Float
  discount    Float?
  finalAmount Float
  
  // Status
  status      OrderStatus @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  
  // Payment Info
  paymentMethod String?
  paymentId     String? @unique
  paidAt       DateTime?
  
  // Affiliate Tracking
  affiliateLinkId String?
  affiliateLink   AffiliateLink? @relation(fields: [affiliateLinkId], references: [id])
  
  // Relations
  user        User?    @relation(fields: [userId], references: [id])
  promoCodes  OrderPromoCode[]
  commission  Commission?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([orderNumber, userId, status, createdAt])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String
  variantId   String?
  
  quantity    Int      @default(1)
  unitPrice   Float
  totalPrice  Float
  
  // Product snapshot
  productName String
  productSku  String
  
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id])
  variant     ProductVariant? @relation(fields: [variantId], references: [id])
  
  @@index([orderId, productId])
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

// ========== PROMO CODE SYSTEM ==========
model PromoCode {
  id          String   @id @default(cuid())
  code        String   @unique
  description String?
  
  // Discount Type
  discountType DiscountType @default(PERCENTAGE)
  discountValue Float
  
  // Limits
  maxUses      Int?
  currentUses  Int      @default(0)
  
  // Validity
  validFrom    DateTime?
  validUntil   DateTime?
  isActive     Boolean  @default(true)
  
  // Applicability
  minOrderAmount Float?
  productId      String?
  product        Product? @relation(fields: [productId], references: [id])
  
  // Relations
  orders       OrderPromoCode[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([code, isActive, validUntil])
}

model OrderPromoCode {
  id          String   @id @default(cuid())
  orderId     String
  promoCodeId String
  
  discountApplied Float
  
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  promoCode PromoCode @relation(fields: [promoCodeId], references: [id])
  
  @@unique([orderId, promoCodeId])
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

// ========== ANALYTICS & TRACKING ==========
model ProductAnalytics {
  id          String   @id @default(cuid())
  productId   String
  date        DateTime
  
  // Daily stats
  views       Int      @default(0)
  clicks      Int      @default(0)
  addToCarts  Int      @default(0)
  purchases   Int      @default(0)
  revenue     Float    @default(0)
  
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([productId, date])
  @@index([date, productId])
}

model SiteAnalytics {
  id          String   @id @default(cuid())
  date        DateTime @unique
  
  // Daily site stats
  visitors    Int      @default(0)
  pageViews   Int      @default(0)
  orders      Int      @default(0)
  revenue     Float    @default(0)
  
  conversionRate Float?
  
  createdAt DateTime @default(now())
  
  @@index([date])
}
