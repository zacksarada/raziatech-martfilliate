    affiliateCode: null,
  }
];

// Simple password hash verification for mock
async function verifyPassword(password: string, hashedPassword: string) {
  // For mock purposes, just compare plain text
  const mockHash = "$2a$10$H3cK9cJXvq3vQ7q7kY8Z6uB0jLmNpQrS1tU2V3w4x5y6z7A8B9C0D1E2F3G4";
  return password === "admin123" && hashedPassword === mockHash || 
         password === "password123" && hashedPassword === mockHash;
}

export const authConfig = {
  providers: [
    Credentials({
      name: "credentials",
      credentials: {
        email: { label: "Email", type: "email" },
        password: { label: "Password", type: "password" },
        name: { label: "Name", type: "text", optional: true },
        role: { label: "Role", type: "text", optional: true }
      },
      async authorize(credentials) {
        if (!credentials?.email || !credentials?.password) {
          return null;
        }

        try {
          // Check existing user
          const user = users.find(u => u.email === credentials.email);

          if (user) {
            // Verify password
            const passwordMatch = await verifyPassword(
              credentials.password as string,
              user.password
            );

            if (passwordMatch) {
              return {
                id: user.id,
                email: user.email,
                name: user.name,
                role: user.role,
                affiliateCode: user.affiliateCode,
              };
            }
          }

          // New user registration (mock)
          if (credentials.name) {
            const newUser = {
              id: (users.length + 1).toString(),
              email: credentials.email as string,
              name: credentials.name as string,
              password: "$2a$10$H3cK9cJXvq3vQ7q7kY8Z6uB0jLmNpQrS1tU2V3w4x5y6z7A8B9C0D1E2F3G4",
              role: (credentials.role as any) || 'BUYER',
              affiliateCode: 'AFF' + Math.random().toString(36).substr(2, 6).toUpperCase(),
            };
            
            // Add to mock users array
            users.push(newUser);

            return {
              id: newUser.id,
              email: newUser.email,
              name: newUser.name,
              role: newUser.role,
              affiliateCode: newUser.affiliateCode,
            };
          }

          return null;
          
        } catch (error) {
          console.error("Auth error:", error);
          return null;
        }
      }
    })
  ],
  session: {
    strategy: "jwt",
    maxAge: 30 * 24 * 60 * 60,
  },
  pages: {
    signIn: "/auth/signin",
    signOut: "/auth/signin",
    error: "/auth/error",
    newUser: "/auth/signup",
  },
  callbacks: {
    async jwt({ token, user }) {
      if (user) {
        token.role = user.role;
        token.id = user.id;
        token.affiliateCode = user.affiliateCode;
      }
      return token;
    },
    async session({ session, token }) {
      if (session.user) {
        session.user.role = token.role as string;
        session.user.id = token.id as string;
        session.user.affiliateCode = token.affiliateCode as string;
      }
      return session;
    },
    async redirect({ url, baseUrl }) {
      if (url.startsWith(baseUrl)) return url;
      if (url.startsWith("/")) return baseUrl + url;
      return baseUrl;
    }
  },
  trustHost: true,
  debug: process.env.NODE_ENV === "development",
} satisfies NextAuthConfig;

export const { handlers, auth, signIn, signOut } = NextAuth(authConfig);

export async function getServerSession() {
  return await auth();
}
