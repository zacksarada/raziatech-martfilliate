    name: "Admin RaziaTech",
    password: "$2a$10$H3cK9cJXvq3vQ7q7kY8Z6uB0jLmNpQrS1tU2V3w4x5y6z7A8B9C0D1E2F3G4", // admin123
    role: "ADMIN",
